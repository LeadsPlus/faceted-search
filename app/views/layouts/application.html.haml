!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Cable Configurator"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/favicon.ico" rel="shortcut icon")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Cable Configurator", root_path, class: "brand" #%a.brand(href="#") Cable Configurator
          .container.nav-collapse
            %ul.nav
              %li= link_to "Cable List", "/cables"
              /%li= link_to "Link 2", "/path2"
              /%li= link_to "Link 3", "/path3"
            %ul.nav.pull-right
              - if user_signed_in?
                %li.dropdown
                  %a.dropdown-toggle{href: "#", "data-toggle" => "dropdown" }
                    %i.icon-user
                    = current_user.email || current_user.name
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to raw('<i class="icon-cog"></i> Profile'), edit_user_registration_path
                    =#%li= link_to raw('<i class="icon-signal"></i> Score'), "#"
                    %li.divider
                    %li= link_to raw('<i class="icon-off"></i> Logout'), destroy_user_session_path, :method => :delete
              - else
                %li= link_to "Login", new_user_session_path


    .container-fluid

      .row-fluid
        .span3
          - if @facets
            .well.sidebar-nav
              %h4= link_to "(clear filters)", cables_path, class: "pull-right"
              %h3 Filters
              
              %ul.nav.nav-list
                - @facets.each do |facet|
                  - if (facet.options.count < 15 && facet.options.count > 2) or facet.relevance > 0.1
                    %li.divider
                    %li.nav-header= "#{facet.name} [#{'%5.2f'%(facet.relevance*100.0)}]" #(#{facet.options[:total]})
                    - facet.options.each do |category, times|             
                      %li= link_to "#{category} (#{times})", params.merge(facet.name.to_sym => category) unless category == :total
        .span9
          -# DONE check bootstrap alerts
          -# TODO create configuration
          -# DONE migrate data
          -# TODO implement faceted search similiar to amazon & test first
          -# TODO devise test and login http://railscasts.com/episodes/209-introducing-devise?view=asciicast
          
          - if notice or flash.key? :notice
            .alert.alert-info
              %button.close{"data-dismiss" => "alert"} x
              =#%h4.alert-heading Notice:
              =#%strong= notice if notice
              %strong= flash[:notice] if flash.key? :notice
          - if alert or flash.key? :alert
            .alert.alert-block
              %button.close{"data-dismiss" => "alert"} x
              =#%h4.alert-heading Warning:
              =#%strong= alert if alert
              %strong= flash[:alert] if flash.key? :alert
          - if flash.key? :error
            .alert.alert-error
              %button.close{"data-dismiss" => "alert"} x
              =#%h4.alert-heading Error(s):
              %strong= flash[:error]
              
          
          = yield
    
      %footer
        %p=# &copy; Company 2012
        
        - if Rails.env.development?
          %hr
          = debug(params)       
          %br
          = debug(flash)
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
