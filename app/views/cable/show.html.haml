.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), cable_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_cable_path(@cable), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), cable_path(@cable), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
