- model_class = @cable.class
%h1=t '.title', :default => model_class.model_name.human

%table.table.table-bordered.table-condensed
  %thead
    %tr
      %th Property
      %th Value
  %tbody
    %tr
      %td
        %strong= model_class.human_attribute_name(:item_number)
      %td= @cable.item_number
    -# %tr
      -# %td
        -# %strong= model_class.human_attribute_name(:level) 
      -# %td= @cable.level
    %tr
      %td
        %strong= model_class.human_attribute_name(:item_description) + ':'
      %td= @cable.item_description
    %tr
      %td
        %strong= model_class.human_attribute_name(:type) + ':'
      %td= @cable.type
    %tr
      %td
        %strong= model_class.human_attribute_name(:conductor) + ':'
      %td= @cable.conductor
    %tr
      %td
        %strong= model_class.human_attribute_name(:number_pairs) + ':'
      %td= @cable.number_pairs
    %tr
      %td
        %strong= model_class.human_attribute_name(:insulation) + ':'
      %td= @cable.insulation
    %tr
      %td
        %strong= model_class.human_attribute_name(:jacket) + ':'
      %td= @cable.jacket
    %tr
      %td
        %strong= model_class.human_attribute_name(:shielding) + ':'
      %td= @cable.shielding
    %tr
      %td
        %strong= model_class.human_attribute_name(:wire_gauge) + ':'
      %td= @cable.wire_gauge
    %tr
      %td
        %strong= model_class.human_attribute_name(:diameter) + ':'
      %td= @cable.diameter
    %tr
      %td
        %strong= model_class.human_attribute_name(:putup) + ':'
      %td= @cable.putup
    %tr
      %td
        %strong= model_class.human_attribute_name(:color) + ':'
      %td= @cable.color
    %tr
      %td
        %strong= model_class.human_attribute_name(:stranding) + ':'
      %td= @cable.stranding
    %tr
      %td
        %strong= model_class.human_attribute_name(:kevlar_core) + ':'
      %td= @cable.kevlar_core
    %tr
      %td
        %strong= model_class.human_attribute_name(:pitch) + ':'
      %td= @cable.pitch

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), cables_path, :class => 'btn'
  -if can? :edit, @cable
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_cable_path(@cable), :class => 'btn'
  -if can? :destroy, @cable
    = link_to t('.destroy', :default => t("helpers.links.destroy")), cable_path(@cable), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
