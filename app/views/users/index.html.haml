%h1 Users Roles

%table.table.table-striped
  %thead
    %tr
      %th Email
      %th Roles
      %th Last Login
      %th Last IP
      %th Actions
  %tbody
    - @users.each do |user|
      %tr
        -# %td= link_to user.email, user_path(user.id)
        %td= user.email
        %td= user.roles.map(&:name).join(", ")
        %td= user.last_sign_in_at.localtime.strftime('%d/%b/%Y %I:%M:%S %P')
        %td= user.last_sign_in_ip
        %td
          = link_to "edit roles", edit_user_path(user.id), class: "btn btn-mini"
          = link_to "delete user", user_path(user.id), method: :delete, confirm: "Are you sure you want to delete this user?", class: "btn btn-mini btn-danger"
